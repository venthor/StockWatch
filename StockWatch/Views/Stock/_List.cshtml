@model List<StockWatch.Models.StockModel>
<table class="table table-bordered tabled-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>&nbsp;</th>
            <th>&nbsp;</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var stock in Model)
        {
            <tr>
                <td>@stock.Name
                </td>
                <td>
                    <a href="/stock/edit/@stock.Id/">edit</a>
                </td>
                <td>
                    <a href="/stock/ViewPrice/@stock.Id/">view</a>
                </td>
                <td>
                    @using (Html.BeginForm("Delete", "Stocks", FormMethod.Post))
                    {
                        @Html.Hidden("id", stock.Id)
                        <a href="#" onclick="$(this).closest('form').submit();return false;">delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="pull-right">
    <a href="/clients/new" class="btn">New Stock</a>
</div>
